{
  "compilerOptions": {
    "module": "commonjs",
    "target": "ES2021",
    "rootDir": "./src",
    "outDir": "./dist",
    "declaration": false,
    "sourceMap": true,
    "removeComments": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "incremental": false,  // Cambiado de true a false
    "tsBuildInfoFile": "./.tsbuildinfo", // Expl√≠cito
    "skipLibCheck": true,
    "strictNullChecks": false,
    "noImplicitAny": false
  },
  "include": ["src/**/*", "src/domain/repository/.ts"],
  "exclude": ["node_modules", "dist"]
}